{
    "git.autofetch": true,
    "editor.formatOnSave": true,
    "files.exclude": {
        "**/*.pyc": true,
        "**/__pycache__/**": true,
        "**/.mypy_cache/**": true
    },
    "editor.rulers": [
        {
            "column": 80,
            "color": "#373737"
        },
        {
            "column": 88,
            "color": "#585858"
        },
        {
            "column": 100,
            "color": "#373737"
        },
    ],
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
    },
    "python.analysis.stubPath": "stubs",
    "mypy-type-checker.severity": {
        "error": "Warning"
    },
    "[markdown]": {
        "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
    },
}